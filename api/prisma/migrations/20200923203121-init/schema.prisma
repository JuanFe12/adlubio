

datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User{
  id            Int      @default(autoincrement()) @id
  email         String   @unique
  firstName     String?
  lastName      String
  password      String?
  orders        Order[]
}

model Order{
  id            Int       @default(autoincrement()) @id
  infoOrder     String?
  user          User?     @relation(fields:  [userId], references: [id])
  userId        Int?
  totalToPay    Int
  orderFood     Orderfood[]
}

model Food {
  id            Int       @default(autoincrement()) @id
  nameFood      String   
  price         Int
  description   String
  discounts     Int  
  orderFood     Orderfood[]
}

model Orderfood{
  id  Int                 @default(autoincrement()) @id
  order         Order?    @relation(fields:  [orderId], references: [id])
  orderId       Int?
  food          Food?     @relation(fields:  [foodId], references: [id])
  foodId        Int?
}